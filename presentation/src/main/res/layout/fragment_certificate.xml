<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/button_certificate"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:text="Заказать справку об обучении"
            android:layout_marginBottom="50dp"
            android:textColor="@android:color/white"
            />

        <Button
            android:id="@+id/button_certificatevoenkomat"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:text="Заказать справку в военкомат"
            android:textColor="@android:color/white"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:visibility="gone">

        <TextView
            style="@style/SettingTextView"
            android:padding="0dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Тип справки" />

        <android.support.v7.widget.AppCompatSpinner
            android:id="@+id/type_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"/>

        <include layout="@layout/divider" />

        <TextView
            style="@style/SettingTextView"
            android:padding="0dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Количество справок" />

        <android.support.v7.widget.AppCompatSpinner
            android:id="@+id/count_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"/>

        <include layout="@layout/divider" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/fio_ed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Ф.И.О"
            android:textColor="@android:color/black"
            app:met_baseColor="@android:color/black"
            app:met_clearButton="true"
            app:met_floatingLabel="highlight"
            app:met_floatingLabelText="Ф.И.О"
            app:met_primaryColor="?colorAccent"
            android:inputType="text"
            />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/group_ed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Группа"
            android:textColor="@android:color/black"
            app:met_baseColor="@android:color/black"
            app:met_clearButton="true"
            app:met_floatingLabel="highlight"
            app:met_floatingLabelText="Группа"
            app:met_primaryColor="?colorAccent"
            android:inputType="text"
            />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/studentid_ed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Номер студента"
            android:textColor="@android:color/black"
            app:met_baseColor="@android:color/black"
            app:met_clearButton="true"
            app:met_floatingLabel="highlight"
            app:met_floatingLabelText="Номер студента"
            app:met_primaryColor="?colorAccent"
            android:inputType="text"
            />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/district_ed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Район"
            android:textColor="@android:color/black"
            app:met_baseColor="@android:color/black"
            app:met_clearButton="true"
            app:met_floatingLabel="highlight"
            app:met_floatingLabelText="Район"
            app:met_primaryColor="?colorAccent"
            android:inputType="text"
            />

        <Button
            android:id="@+id/send_button"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="60dp"
            android:text="Заказать"
            android:textColor="@android:color/white"/>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>