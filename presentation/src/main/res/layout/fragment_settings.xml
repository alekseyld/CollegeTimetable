<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/setUrlServer"
            style="@style/SettingTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/setUrlServer_title" />

        <include layout="@layout/divider" />

        <TextView
            android:id="@+id/addFarvorite"
            style="@style/SettingTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/addFarvorite" />

        <include layout="@layout/divider" />

        <LinearLayout
            android:id="@+id/addNotif"
            style="@style/SettingTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/mygroup"
                android:textColor="@android:color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/my_group_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"/>
        </LinearLayout>

        <include layout="@layout/divider" android:visibility="gone" />

        <Switch
            android:id="@+id/notifOn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="@string/notifS"
            android:textSize="15sp" />

        <include layout="@layout/divider" />

        <Switch
            android:id="@+id/alarmMode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="@string/alarmModeS"
            android:textSize="15sp" />

        <include layout="@layout/divider" />

        <Switch
            android:id="@+id/changeMode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="@string/changeMode"
            android:textSize="15sp" />

        <include layout="@layout/divider" />

    </LinearLayout>
</ScrollView>